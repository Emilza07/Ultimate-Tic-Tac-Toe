<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ACTIVITIES.HomeActivity">

	<ImageButton
		android:id="@+id/imageButton"
		android:layout_width="100dp"
		android:layout_height="100dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:srcCompat="@tools:sample/avatars" />

	<ImageButton
		android:id="@+id/imageButton2"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:scaleType="fitXY"
		app:layout_constraintStart_toEndOf="@+id/imageButton"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/top_players" />

	<ImageButton
		android:id="@+id/imageButton3"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:scaleType="fitXY"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/settings" />

	<Button
		android:id="@+id/button6"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="56dp"
		android:text="Single Player"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

	<Button
		android:id="@+id/btnLocal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="52dp"
		android:text="Local Multiplayer"
		app:layout_constraintEnd_toEndOf="@+id/button6"
		app:layout_constraintStart_toStartOf="@+id/button6"
		app:layout_constraintTop_toBottomOf="@+id/button6" />

	<Button
		android:id="@+id/btnHost"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="52dp"
		android:text="Host an online game"
		app:layout_constraintEnd_toEndOf="@+id/btnLocal"
		app:layout_constraintStart_toStartOf="@+id/btnLocal"
		app:layout_constraintTop_toBottomOf="@+id/btnLocal" />

	<Button
		android:id="@+id/btnJoin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="36dp"
		android:text="Join an online game"
		app:layout_constraintEnd_toEndOf="@+id/btnHost"
		app:layout_constraintStart_toStartOf="@+id/btnHost"
		app:layout_constraintTop_toBottomOf="@+id/btnHost" />

</androidx.constraintlayout.widget.ConstraintLayout>